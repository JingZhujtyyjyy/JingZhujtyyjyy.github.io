@article{einstein1905molekularkinetischen,
  title={Between Staying and Leaving: Interaction Mechanisms Among Bilibili Dropout Creators（去留之间：B站中辍up主‘主客我互动机制研究’},
  author={Han Qing Ding and Jing Zhu},
  abstract={This study analyzes the farewell videos of Bilibili creators who have temporarily or permanently stopped posting ("dropout creators") to explore their interaction with platform algorithms, audiences, and digital environments. It reveals that these creators face an unstable and demanding "Other-self," composed of opaque algorithms, boundary-blurring viewers, and fluid platform dynamics. This strained relationship triggers anxiety and burnout in their "Subject-self." In response, creators adopt either withdrawal or adjustment strategies to restore balance, leading to common phenomena such as long breaks or account abandonment. The findings suggest that while digital identities offer flexibility, they also complicate creators’ relational networks and emotional well-being.},
  journal={Modern Communication},
  volume={46},
  number={8},
  pages={114--123},
  year={2024},
