@article{PhysRev.47.777,
  title={Focusing and Decentralizing: A study on the mechanism of emotional impact on network agenda setting(聚焦与分散：情绪对网络议程设置影响机制研究)},
  author={Han Qing Ding and Jing Zhu*},
  abstract={This study explores how emotional valence shapes the network agenda-setting process. While traditional agenda-setting theory has emphasized cognition, we highlight the overlooked role of emotion. Through experiments, we find that negative emotions narrow cognitive focus and weaken media–audience agenda correlations (focusing effect), whereas positive emotions encourage more balanced attention and strengthen these correlations (dispersing effect). These findings suggest that future agenda-setting research should integrate emotional dynamics, and public communication should carefully balance factual expression with emotional appeal to avoid pitfalls like post-truth and group polarization.},
  journal={Journalism & Communication},
  volume={31},
  issue={8},
  pages={50-63+127},
  year={2024},
  month={Augest},
  publisher=aps,
