@article{einstein1950meaning,
  title={Psychological Compensation of Drinking Poison to Quench Thirst: The Dual Effects of Smartphone Use Habits on Depression in CHinese Left-Behind Adolescents},
  author={Jing Zhu and Rui Wang},
      abstract={This study investigates the dual effects of smartphone use habits on depression among Chinese left-behind adolescents. Based on a field survey of 848 adolescents, the study finds that frequent, prolonged, and recreational smartphone use—via increasing dependence—leads to social anxiety, stress, and sleep disorders, thereby worsening depression. While social smartphone use enhances online social support, it fails to alleviate loneliness or depression. The findings suggest that digital companionship may offer limited emotional relief, highlighting the importance of offline social support in promoting adolescents’ mental well-being.},
