@article{einstein1905molekularkinetischen,
  title={How User Visibility Aﬀects Peer Production（用户可见性对大众生产影响机制研究）},
  author={Han Qing Ding and Jing Zhu},
  abstract={This study takes Baidu Baike as a case to explore how peer production becomes possible on digital platforms. Using online ethnography and participatory observation, it examines user visibility as a key mechanism. The platform differentiates user visibility through data redistribution and rule design, shaping weak ties (between producers and viewers) and strong ties (among producers) based on who sees and is seen. These ties generate three core motivations: to produce higher-quality content, to produce more content, and to sustain long-term production. The study proposes a "visibility–relation–motivation" framework, revealing the relational dynamics behind peer production beyond the simplistic platform–user power binary.},
